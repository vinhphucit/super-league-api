    "components": {
        "schemas": {
            "HealthCheck": {
                "type": "object",
                "$ref": "#/components/schemas/AppInfo"
            },
            "AppInfo": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "EZ Language"
                    },
                    "version": {
                        "type": "string",
                        "example": "1.0.0"
                    },
                    "host": {
                        "type": "string",
                        "example": "0.0.0.0"
                    },
                    "port": {
                        "type": "string",
                        "example": "3000"
                    },
                    "env": {
                        "type": "string",
                        "example": "dev"
                    }
                }
            },
            "CreateSeasonRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            },
            "UpdateSeasonRequest": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    }
                }
            },
            "GetSeasonsResponse": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/BaseListResponse",
                        "type": "object",
                        "properties": {
                            "items": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/Season"
                                }
                            }
                        }
                    }
                ]
            },
            "CreatePlayerRequest": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "nickname": {
                        "type": "string"
                    }
                }
            },
            "UpdatePlayerRequest": {
                "type": "object",
                "properties": {
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "nickname": {
                        "type": "string"
                    }
                }
            },
            "GetPlayersResponse": {
                "type": "object",
                "allOf": [
                    {
                        "$ref": "#/components/schemas/BaseListResponse",
                        "type": "object",
                        "properties": {
                            "items": {
                                "type": "array",
                                "items": {
                                    "$ref": "#/components/schemas/Player"
                                }
                            }
                        }
                    }
                ]
            },
            "BaseListResponse": {
                "type": "object",
                "properties": {
                    "limit": {
                        "type": "number"
                    },
                    "start": {
                        "type": "number"
                    },
                    "totalItems": {
                        "type": "number"
                    },
                    "sort": {
                        "type": "string"
                    },
                    "query": {
                        "type": "string"
                    },
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "object"
                        }
                    }
                }
            },
            "Season": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "creatorId": {
                        "type": "string"
                    },
                    "status": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string"
                    },
                    "updatedAt": {
                        "type": "string"
                    }
                }
            },
            "Player": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "firstName": {
                        "type": "string"
                    },
                    "lastName": {
                        "type": "string"
                    },
                    "nickname": {
                        "type": "string"
                    },
                    "createdAt": {
                        "type": "string"
                    },
                    "updatedAt": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
