{
    "compilerOptions": {
      "module": "commonjs",
      
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "pretty": true,
      "outDir": ".tmp",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata":true,
      "paths": {
        "*": [
          "node_modules/*"
        ]
      }
    },
    "include": [
      "src/**/*",
      "commands/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.test.ts",
      "src/public",
      "tests"
    ]
  }
  